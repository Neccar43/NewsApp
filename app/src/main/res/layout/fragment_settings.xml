<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical"
    tools:context=".view.SettingsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="20dp"
                android:gravity="center_vertical"
                android:text="Hesap Bilgilerim"
                android:textSize="20sp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/baseline_person_24"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/changeMailText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="20dp"
                android:gravity="center_vertical"
                android:text="E-Mail Değiştirme"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/baseline_email_24" />

            <TextView
                android:id="@+id/changePasswordText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="20dp"
                android:gravity="center_vertical"
                android:text="Şifre Değiştirme"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/baseline_lock_24" />

            <TextView
                android:id="@+id/deleteText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="20dp"
                android:gravity="center_vertical"
                android:text="Hesabı Sil"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/baseline_delete_24" />

            <TextView
                android:id="@+id/logOutText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="20dp"
                android:gravity="center_vertical"
                android:text="Çıkış Yap"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/baseline_logout_24" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>